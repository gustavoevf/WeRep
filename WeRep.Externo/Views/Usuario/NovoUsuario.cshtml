@using WeRep.Models
@model UsuarioModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NovoUsuario</title>
</head>
<body>
    @using (Html.BeginForm("NovoUsuario", "Usuario", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Insira seus dados </th>
            </tr>
            <tr>
                <td>Nome: </td>
                <td>
                    @Html.TextBoxFor(m => m.nome)
                    @if (ViewBag.ErroUsuario == Recursos.erroListagem.UsuarioJaExistente)
                    {<span style="color: red;">Usuario já existente, favor tentar novamente</span>}
                </td>
            </tr>
            <tr>
                <td>Senha: </td>
                <td>
                    @Html.PasswordFor(m => m.senha)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>

