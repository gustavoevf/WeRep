@model List<KanbanModel> 
@using WeRep.Models

<div class="grid">
    @if (Model != null)
    {
        foreach (KanbanModel mensagem in Model)
        {
            if (mensagem.vencimento > DateTime.Now)
            {
                <div class="kanban" style="width: 20%; background-color: @mensagem.cor">
                    <span>

                        @mensagem.mensagem

                    </span>
                </div>
            }
        }
    }
</div>
