@using WeRep.Models
@model RepublicaModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NovoUsuario</title>
</head>
<body>
    @using (Html.BeginForm("CriarRepublica", "Republica", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Personalize sua república</th>
            </tr>
            <tr>
                <td>Nome: </td>
                <td>
                    @Html.TextBoxFor(m => m.nome)
                </td>
            </tr>
            <tr>
                <td>Estado: </td>
                <td>
                    @Html.TextBoxFor(m => m.estado)
                </td>
            </tr>
            <tr>
                <td>Cidade: </td>
                <td>
                    @Html.TextBoxFor(m => m.cidade)
                </td>
            </tr>
            <tr>
                <td>Bairro: </td>
                <td>
                    @Html.TextBoxFor(m => m.bairro)
                </td>
            </tr>
            <tr>
                <td>Rua: </td>
                <td>
                    @Html.TextBoxFor(m => m.rua)
                </td>
            </tr>
            <tr>
                <td>Numero: </td>
                <td>
                    @Html.TextBoxFor(m => m.numero)
                </td>
            </tr>
            <tr>
                <td>Complemento: </td>
                <td>
                    @Html.TextBoxFor(m => m.complemento)
                </td>
            </tr>
            <tr>
                <td>Capacidade: </td>
                <td>
                    @Html.TextBoxFor(m => m.capacidade)
                </td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>
